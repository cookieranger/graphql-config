{
  "name": "graphql-config",
  "version": "2.2.1",
  "description": "The easiest way to configure your development environment with your GraphQL schema (supported by most tools, editors & IDEs)",
  "main": "dist/index.js",
  "module": "dist/graphql-config.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prepublish": "yarn build",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "tsdx build",
    "format": "prettier --write '{src,test}/**/*.{ts,graphql}'",
    "test": "tsdx test",
    "precommit": "lint-staged"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "dependencies": {
    "graphql-import": "0.7.1",
    "graphql-request": "1.8.2",
    "js-yaml": "3.13.1",
    "lodash": "4.17.15",
    "minimatch": "3.0.4"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/nock": "11.1.0",
    "@types/node": "12.7.8",
    "@types/node-fetch": "2.5.2",
    "graphql": "14.5.8",
    "husky": "3.0.5",
    "lint-staged": "9.4.0",
    "nock": "11.3.5",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "tsdx": "0.9.2",
    "tslib": "1.10.0",
    "typescript": "3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilkisiela/graphql-config.git"
  },
  "homepage": "https://github.com/kamilkisiela/graphql-config#readme",
  "keywords": [
    "graphql",
    "config",
    "relay",
    "apollo"
  ],
  "author": "Johannes Schickling <johannes@graph.cool>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 6.0.0"
  }
}
