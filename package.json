{
  "name": "graphql-config",
  "version": "3.0.0-alpha.14",
  "description": "The easiest way to configure your development environment with your GraphQL schema (supported by most tools, editors & IDEs)",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "rollup -c rollup.config.js",
    "format": "prettier --write '{src,test}/**/*.{ts,graphql}'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "jest",
    "now-build": "(cd website && yarn && yarn build && mv build/graphql-config ../public)",
    "precommit": "lint-staged",
    "release": "npm publish dist",
    "release:next": "npm publish dist --tag next"
  },
  "files": [
    "dist/*"
  ],
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "dependencies": {
    "@graphql-toolkit/common": "0.6.8",
    "@graphql-toolkit/graphql-file-loader": "0.6.7",
    "@graphql-toolkit/json-file-loader": "0.6.7",
    "@graphql-toolkit/schema-merging": "0.6.8",
    "@graphql-toolkit/url-loader": "0.6.7",
    "cosmiconfig": "5.2.1",
    "globby": "10.0.1",
    "minimatch": "3.0.4"
  },
  "devDependencies": {
    "@types/cosmiconfig": "5.0.3",
    "@types/jest": "24.0.22",
    "@types/nock": "11.1.0",
    "@types/node": "12.12.7",
    "@types/node-fetch": "2.5.3",
    "@typescript-eslint/parser": "2.6.1",
    "del": "5.1.0",
    "eslint": "6.6.0",
    "graphql": "14.5.8",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "make-dir": "3.0.0",
    "nock": "11.7.0",
    "parent-module": "2.0.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "rollup": "1.26.3",
    "rollup-plugin-generate-package-json": "3.1.3",
    "rollup-plugin-typescript2": "0.24.3",
    "ts-jest": "24.1.0",
    "tslib": "1.10.0",
    "typescript": "3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilkisiela/graphql-config.git"
  },
  "homepage": "https://graphql-config.com",
  "keywords": [
    "graphql",
    "config",
    "relay",
    "apollo"
  ],
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 6.0.0"
  }
}
